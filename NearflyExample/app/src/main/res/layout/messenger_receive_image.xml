    <ImageView
        android:id="@+id/msg_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you?"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@+id/msg_profil_image"
        app:layout_constraintTop_toBottomOf="@+id/msg_username" />

<TextView
    android:id="@+id/msg_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:text="11:40"
    android:textSize="10sp"
    app:layout_constraintBottom_toBottomOf="@+id/msg_body"
    app:layout_constraintLeft_toRightOf="@+id/msg_body" />
